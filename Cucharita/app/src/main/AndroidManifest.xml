<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Añadir permisos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cucharita"
        android:usesCleartextTraffic="true"> <!-- ✅ Para desarrollo local -->

        <!-- ✅ Login como LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Cucharita">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Register -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Crear Cuenta"
            android:theme="@style/Theme.Cucharita" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cucharita" />

        <!-- ✅ Nuevas actividades para API -->
        <activity
            android:name=".AddRecipeApiActivity"
            android:exported="false"
            android:label="Agregar Receta"
            android:theme="@style/Theme.Cucharita" />

        <activity
            android:name=".RecipeDetailApiActivity"
            android:exported="false"
            android:label="Detalle de Receta"
            android:theme="@style/Theme.Cucharita" />

        <!-- Resto de actividades existentes... -->
        <activity
            android:name=".RecipeGalleryActivity"
            android:exported="false"
            android:label="@string/title_gallery"
            android:theme="@style/Theme.Cucharita" />

        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:label="@string/title_favorites"
            android:theme="@style/Theme.Cucharita" />

        <activity
            android:name=".RecipeDetailActivity"
            android:exported="false"
            android:label="@string/title_recipes"
            android:theme="@style/Theme.Cucharita" />

        <activity
            android:name=".EditRecipeActivity"
            android:exported="false"
            android:label="@string/edit_recipe"
            android:theme="@style/Theme.Cucharita" />

        <activity
            android:name=".AddRecipeActivity"
            android:exported="false"
            android:label="@string/btn_add_recipe"
            android:theme="@style/Theme.Cucharita" />

    </application>

</manifest>