<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ“ app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- â­ PERMISOS NECESARIOS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CucharitaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cucharita"
        android:usesCleartextTraffic="true">

        <!-- â­ LOGIN ACTIVITY - LAUNCHER PRINCIPAL -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cucharita">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cucharita" />

        <!-- Recipe Gallery screen -->
        <activity
            android:name=".RecipeGalleryActivity"
            android:exported="false"
            android:label="@string/title_gallery"
            android:theme="@style/Theme.Cucharita" />

        <!-- Favorites screen -->
        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:label="@string/title_favorites"
            android:theme="@style/Theme.Cucharita" />

        <!-- Recipe detail screen -->
        <activity
            android:name=".RecipeDetailActivity"
            android:exported="false"
            android:label="@string/title_recipes"
            android:theme="@style/Theme.Cucharita" />

        <!-- Edit recipe screen -->
        <activity
            android:name=".EditRecipeActivity"
            android:exported="false"
            android:label="@string/edit_recipe"
            android:theme="@style/Theme.Cucharita" />

        <!-- Add recipe screen -->
        <activity
            android:name=".AddRecipeActivity"
            android:exported="false"
            android:label="@string/btn_add_recipe"
            android:theme="@style/Theme.Cucharita" />

    </application>

</manifest>