<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Logo/T铆tulo -->
        <TextView
            android:text=" Cucharita"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginBottom="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electr贸nico"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text" />

        <!-- Password -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase帽a"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text" />

        <!-- Name (solo para registro) -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre (opcional)"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:background="@android:drawable/edit_text" />

        <!-- Bot贸n principal (Login/Register) -->
        <Button
            android:id="@+id/loginButton"
            android:text="Iniciar Sesi贸n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Texto toggle -->
        <TextView
            android:id="@+id/toggleModeText"
            android:text="Crear nueva cuenta"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Bot贸n secundario -->
        <Button
            android:id="@+id/registerButton"
            android:text="驴No tienes cuenta? Reg铆strate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>